<%= form_for(@lesson) do |f| %>
	<div class="field">
		<%= f.label :subject %>
		<%= f.text_field :subject %>
	</div>
	<div class="field">
		<%= f.label :image %>
		<%= f.text_field :image %>
	</div>
	<div class="field">
		<%= f.label :description %>
		<%= f.text_field :description %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>